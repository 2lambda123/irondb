<!DOCTYPE html>
<html>
  <head>
    <title>Data Entry</title>
    <%- include('bootstrap/css'); %>
    <link rel='stylesheet' href='/stylesheets/data-entry.css' />
  </head>
  <body>
    <%- include('components/navbar_signed_in'); %>

    <div class="container-fluid pt-3" id="bottom-container">
      <div class="d-flex flex-row align-items-center justify-content-center mt-5 mb-2">
        <h3>Select a data entry approach below:</h3>
      </div>

      <div class="d-flex flex-row align-items-center justify-content-center pt-3">
        <button class="btn btn-dark btn-lg bg-secondary mr-3" id="tool">Automated Tool</button>
        <h3> - or - </h3>
        <button class="btn btn-dark btn-lg bg-secondary ml-3" id="editor">Manual Editor</button>
      </div>

      <div class="d-flex flex-row align-items-center justify-content-center pt-3">
          <form method="POST" action="/data-entry" enctype="multipart/form-data" class="border border-dark align-top mx-auto bg" id="pdf-form">
            <div class="form-group">
              <label for="tool_select" class="sr-only">Boolean for selecting the Automated tool when tool button selected.</label>
              <input id="tool_select" name="tool_select" type="hidden" value="true">
            </div>
            <div class="form-group">
              <label for="editor_select" class="sr-only">Boolean for selecting the manual editor when editor button selected.</label>
              <input id="editor_select" name="editor_select" type="hidden" value="false">
            </div>
            <div class="form-group">
                <label for="filetoupload">Choose file to upload</label>
                <input type="file" id="pdf" name="filetoupload"
                    accept=".pdf">
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
          </form>
      </div>

    </div>

    <%- include('bootstrap/js'); %>
  </body>
</html>
