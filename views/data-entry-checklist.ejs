<!DOCTYPE html>
<html>
  <head>
    <title>Data Entry Tool - Checklist</title>
    <%- include('components/font-awesome'); %>
    <%- include('bootstrap/css'); %>
    <link rel='stylesheet' href='/stylesheets/data-entry.css' />
  </head>
  <body>
    <%- include('components/navbar_signed_in'); %>
    <div class="container-fluid pt-3 pb-4" id="top-container">
        <div class="d-flex flex-row align-items-center justify-content-center mt-2 mb-2">
            <h1>Data Entry Tool</h1>
        </div>
    </div>

    <div class="container-fluid pt-1 pb-1">
        <div class="row">
            <div class="col-sm-12 col-md-6 pl-1 mb-3">
                <div id="pdf-panel"></div>
            </div>

            <div class="col-sm-11 col-md-6">
                <form method="POST" action="/data-entry" class="border border-dark bg mx-auto p-3 pl-5" id="checklist-form">
                    <h3 class="pb-1 align-items-center">Options</h3>
                    <div class="form-group">
                        <input class="form-check-input" type="checkbox" id="journal">
                        <label class="form-check-label" for="journal">Journal Information</label>
                    </div>
                    <div class="form-group">
                        <input class="form-check-input" type="checkbox" id="paper">
                        <label class="form-check-label" for="paper">Paper Information</label>
                    </div>
                    <div class="form-group">
                        <input class="form-check-input" type="checkbox" id="authors">
                        <label class="form-check-label" for="authors">Author(s)</label>
                    </div>
                    <div class="form-group">
                        <input class="form-check-input" type="checkbox" id="technique">
                        <label class="form-check-label" for="technique">Analysis Technique</label>
                    </div>

                    <hr class="text-danger mt-1">
                    <div class="form-group">
                        <input class="form-check-input" type="checkbox" id="tables">
                        <label class="form-check-label" for="tables">Table Data</label>
                    </div>
                    <button type="submit" class="btn btn-secondary float-right ml-3 mt-3">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <div hidden="true" id="filepath" value="<%- data %>"><%- data %></div>
    <%- include('bootstrap/js'); %>
    <%- include('components/ejs'); %>
    <script src='/javascripts/pdfobject.min.js'></script>
    <script src="/javascripts/checklist.js"></script>
</body>
</html>